---
const { title, base, user, latest, description, website, row } = Astro.props
---

<div class="card" data-flex={row}?>
  <div class="flex-columns container">
    <div class="text scroll-element">
      <h1>{title}</h1>
      <div class="details">
        <p><strong>Base: </strong>{base} <i class="fa-solid fa-bolt"></i></p>
        <p><strong>Sugerido a: </strong>{user} <i class="fa-solid fa-user"></i></p>
      </div>
      <p>{description}</p>
      <p class="website"><a target="_blank" href={website}>
        <button>Ir al sitio oficial</button>
      </a></p>
      </p>
    </div>
    <div class="image scroll-element">
      <slot />
    </div>
  </div>
</div>

<style>
  .flex-columns {
    display: flex;
    gap: var(--size-600)
  }

  .flex-columns > * {
    padding: 2em;
  }

  .card {
    padding-top: 3em;
    padding-bottom: 3em;
    background-color: var(--clr-card-bg-primary);
  }

  .card[data-flex="row-reverse"] {
    background-color: var(--clr-card-bg-secondary);
  }

  .card[data-flex="row-reverse"] .flex-columns {
    flex-direction: row-reverse;
  }

  .text {
    display: flex;
    flex-direction: column;
    gap: 2.5em;
    max-width: 85ch;
  }

  .details i {
    margin-left: .3em;
  }

  .image {
    flex-grow: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  h1 {
    font-weight: var(--fw-semibold);
    color: var(--clr-card-accent);
    font-size: var(--fs-750);
  }

  p {
    color: var(--clr-card-text-primary);
    font-size: var(--fs-450);
  }

  button {
    cursor: pointer;
    border: 1px solid var(--clr-card-accent);
    background-color: transparent;
    padding: .5em 1em;
    font-size: var(--fs-450);
    color: var(--clr-card-accent);
    border-radius: var(--rounded-20);
    transition: background-color .1s ease, color .1s ease;
  }

  button:hover {
    background-color: var(--clr-card-accent);
    color: var(--clr-button-accent);
  }

  .website {
    text-decoration: underline;
    text-underline-offset: 5px;
    font-size: var(--fs-400);
    color: var(--clr-card-text-secondary);
  }

  @media(width <= 850px) {
    .flex-columns {
      flex-direction: column;
      gap: var(--size-200)
    }
    .card[data-flex="row-reverse"] .flex-columns {
      flex-direction: column-reverse;
    }
  }
</style>