---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />

		<script src="https://kit.fontawesome.com/92992ef526.js" crossorigin="anonymous"></script>
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');
	@import "https://www.nerdfonts.com/assets/css/webfont.css";
	
	:root {
		--clr-neutral-100: rgb(255, 255, 255);
		--clr-neutral-200: rgb(240, 240, 240);
		--clr-neutral-300: rgb(210, 210, 210);
		--clr-neutral-400: rgb(130, 130, 130);
		--clr-neutral-500: rgb(105, 105, 105);
		--clr-neutral-600: rgb(40, 40, 40);
		--clr-neutral-700: rgb(25, 25, 25);
		--clr-neutral-800: rgb(15, 15, 15);
		--clr-neutral-900: rgb(5, 5, 5);
		
		--clr-accent-100: rgb(249, 253, 255);
		--clr-accent-200: rgb(241, 245, 247);
		--clr-accent-300: rgb(168, 217, 250);
		--clr-accent-400: rgb(17, 109, 174);
		--clr-accent-500: rgb(11, 71, 114);
		--clr-accent-600: rgb(11, 71, 113);
		--clr-accent-700: rgb(4, 40, 65);
		--clr-accent-800: rgb(2, 19, 33);
		--clr-accent-900: rgb(2, 23, 37);

		--clr-heading-accent: var(--clr-accent-600);
		--clr-text-heading: var(--clr-neutral-100);

		--clr-button-accent: var(--clr-neutral-100);
		--clr-card-text-primary: var(--clr-neutral-900);
		--clr-card-text-secondary: var(--clr-neutral-500);
		--clr-card-accent: var(--clr-accent-700);
		--clr-card-bg-primary: var(--clr-accent-100);
		--clr-card-bg-secondary: var(--clr-accent-200);
		--clr-bg-mobile-nav: var(--clr-accent-400);
		
		--clr-bg-gradient: linear-gradient(to left, var(--clr-accent-400), var(--clr-accent-700));

		--fs-100: .25rem;
		--fs-150: .40rem;
		--fs-200: .50rem;
		--fs-250: .75rem;
		--fs-300: .8rem;
		--fs-350: .9rem;
		--fs-400: 1rem;
		--fs-450: 1.125rem;
		--fs-500: 1.25rem;
		--fs-550: 1.4rem;
		--fs-600: 1.6rem;
		--fs-650: 1.7rem;
		--fs-700: 2rem;
		--fs-750: 2.2rem;
		--fs-800: 2.5rem;
		--fs-850: 2.8rem;
		--fs-900: 3rem;
		--fs-950: 3.5rem;

		--fw-regular: 400;
		--fw-medium: 500;
		--fw-semibold: 600;
		--fw-bold: 700;
		--fw-extrabold: 800;

		--ff-html: "Inter", sans-serif;

		--rounded-5: 5px;
		--rounded-10: 10px;
		--rounded-15: 15px;
		--rounded-20: 20px;

		--size-100: 1em;
		--size-200: 2em;
		--size-300: 3em;
		--size-400: 3.5em;
		--size-500: 5em;
		--size-600: 6em;
		--size-700: 9em;
		--size-800: 10em;
		--size-900: 11em;
	}

	body[dark-mode] {
		--clr-heading-accent: var(--clr-accent-700);
		--clr-card-text-primary: var(--clr-neutral-100);
		--clr-card-text-secondary: var(--clr-neutral-400);
		--clr-card-bg-primary: var(--clr-accent-900);
		--clr-card-bg-secondary: var(--clr-accent-800);
		--clr-card-accent: var(--clr-accent-300);
		--clr-bg-mobile-nav: var(--clr-accent-800);
		--clr-button-accent: var(--clr-neutral-900);

		--clr-bg-gradient: linear-gradient(to left, var(--clr-accent-600), var(--clr-accent-800));
	}

	@keyframes fadeIn {
		0% {
			opacity: 0;
		}
		100% {
			opacity: 1;
		}
	}

	@keyframes fadeOut {
		0% {
			opacity: 1;
		}
		100% {
			opacity:0;
		}
	}

	html {
		color: var(--clr-neutral-900);
		scroll-behavior: smooth;
		font-family: var(--ff-html);
		font-size: 16px;
		line-height: 1.6;
	}

	* {
		margin: 0;
		padding: 0;
	}

	*, *::after, *::before {
		box-sizing: border-box;
	}

	img,
	svg,
	picture {
		width: 100%;
		display: block;
	}

	ul,
	ol {
		list-style-type: none;
	}

	a {
		text-decoration: none;
		color: currentColor;
	}

	h1, h2, h3, h4, h5, h6 {
		line-height: 1;
	}

	i.big-icon {
		color: var(--clr-card-accent);
		font-size: var(--i-size, var(--size-700));
	}

	svg.big-svg-icon {
		width: var(--i-size, var(--size-700));
	}

	strong {
		font-weight: var(--fw-medium);
		color: var(--clr-card-accent);
	}

	.container {
		--max-width: var(--custom-width, 1100px);
		--padding: var(--custom-padding, 1rem);

		width: min(var(--max-width), 100% - (var(--padding) * 2));
		margin-inline: auto;
	}

	.flow > * + * {
		margin-top: var(--flow-space, 1em);
	}
</style>
